<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MyMVVM.ViewModels;assembly=MyMVVM"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyMVVM.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="MyMVVM">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="35"/>
      </Grid.RowDefinitions>
      <DockPanel Grid.Row="0" LastChildFill="True">        
        <TextBlock Grid.Column="0" Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        <TextBox Text="" Margin="5"/>
      </DockPanel>
    </Grid>
</Window>
